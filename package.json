{
  "name": "typescript-ddd-skeleton",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": ">=10.15.0",
    "npm": ">=6.7.0"
  },
  "scripts": {
    "test": "NODE_ENV=test mocha 'tests/**/**.test.ts' --require ts-node/register --require source-map-support/register",
    "test:unit": "NODE_ENV=test mocha -r ts-node/register --watch-extensions ts,tsx --watch",
    "build": "npm run build:clean && npm run build:tsc",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:clean": "rm -r dist; exit 0"
  },
  "dependencies": {
    "@types/compression": "^1.0.1",
    "@types/convict": "^4.2.1",
    "@types/express": "^4.17.1",
    "@types/helmet": "0.0.44",
    "@types/node": "~11.13.0",
    "@types/uuid": "^3.4.5",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "convict": "^5.1.0",
    "copy": "^0.3.2",
    "express": "^4.17.1",
    "helmet": "^3.21.1",
    "http-status": "^1.3.2",
    "mandrill-api": "^1.0.45",
    "node-dependency-injection": "^2.3.5",
    "ts-node": "^8.3.0",
    "typescript": "^3.4.5",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.31",
    "@types/faker": "^4.1.5",
    "@types/mocha": "^5.2.7",
    "@types/should": "^13.0.0",
    "@types/sinon": "^7.0.13",
    "@types/supertest": "^2.0.8",
    "faker": "^4.1.0",
    "husky": "^1.3.1",
    "lint-staged": "8.2.1",
    "mocha": "^6.2.0",
    "prettier": "^1.16.4",
    "should": "^13.2.3",
    "sinon": "^7.4.1",
    "source-map-support": "^0.5.13",
    "supertest": "^4.0.2",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "~1.18.0",
    "tslint-eslint-rules": "^5.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  }
}
